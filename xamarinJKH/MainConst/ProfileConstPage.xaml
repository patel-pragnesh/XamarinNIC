<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:xamarinJKH"
             xmlns:mask="clr-namespace:xamarinJKH.Mask;assembly=xamarinJKH"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:customRenderers="clr-namespace:xamarinJKH.CustomRenderers;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#F3F3F3}"
             x:Class="xamarinJKH.MainConst.ProfileConstPage">
    <ContentPage.Content>
        <StackLayout>

            <Grid>
                <Image x:Name="ImageFon"
                       Source="{AppThemeBinding Light=ic_background_profile_light, Dark=ic_background_profile}"
                       VerticalOptions="Start"
                       Margin="0,20,0,0"
                       Aspect="AspectFill"
                       HorizontalOptions="FillAndExpand" />
                <StackLayout>
                    <pancakeView:PancakeView
                        Padding="0"
                        CornerRadius="0,0,25,25"
                        BorderThickness="1"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#131313}"
                        HorizontalOptions="Fill"
                        MinimumHeightRequest="102"
                        VerticalOptions="Start"
                        x:Name="Pancake"
                        IsClippedToBounds="True">
                        <Grid IsClippedToBounds="True">
                            <StackLayout Orientation="Horizontal"
                                         VerticalOptions="Fill"
                                         HorizontalOptions="FillAndExpand">
                                <StackLayout Padding="10"
                                             HorizontalOptions="FillAndExpand">
                                    <Label x:Name="UkName"
                                           Text="Название"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    <StackLayout
                                        Spacing="0"
                                        Orientation="Horizontal">
                                        <xamarinJkh:IconView x:Name="IconViewLogin"
                                                             Source="ic_phone"
                                                             HeightRequest="15"
                                                             Foreground="White"
                                                             IsVisible="False"
                                                             Margin="-10, 0,0,0"
                                                             HorizontalOptions="Start"
                                                             VerticalOptions="Center" />
                                        <Label x:Name="LabelName"
                                               Text="Телефон"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                               Margin="0, 0, 0, 0"
                                               VerticalOptions="Center" />
                                    </StackLayout>
                                </StackLayout>
                                <pancakeView:PancakeView
                                    BorderColor="Gray"
                                    x:Name="PancakeViewIcon"
                                    BorderThickness="1"
                                    Padding="0"
                                    CornerRadius="25,0,25,25"
                                    BackgroundColor="White"
                                    HorizontalOptions="End"
                                    IsClippedToBounds="True">
                                    <Image x:Name="IconViewNameUk"
                                           Source="icon_login"
                                           HeightRequest="70" />
                                </pancakeView:PancakeView>
                            </StackLayout>
                        </Grid>
                    </pancakeView:PancakeView>
                    <StackLayout
                        HorizontalOptions="End"
                        Margin="0,0,15,0"
                        Orientation="Horizontal">
                        <xamarinJkh:IconView x:Name="IconViewTech"
                                             Source="ic_tech"
                                             HeightRequest="20"
                                             Foreground="White"
                                             Margin="0, 0,0,0"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center" />
                        <Label x:Name="LabelTech"
                               Text="{x:Static xamarinJkh:AppResources.Support}"
                               FontSize="14"
                               TextDecorations="Underline"
                               TextColor="White"
                               Margin="-10, 0, 0, 0"
                               VerticalOptions="Center" />
                    </StackLayout>
                    <StackLayout
                        x:Name="BackStackLayout"
                        Orientation="Horizontal"
                        Margin="25, 0, 0, 0"
                        HorizontalOptions="Start">
                        <Label
                            Text="{x:Static xamarinJkh:AppResources.Profile_NavBar}"
                            FontSize="23"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            FontAttributes="Bold"
                            HorizontalOptions="Start" />
                    </StackLayout>
                    <ScrollView x:Name="ScrollViewContainer"
                                Orientation="Vertical"
                                VerticalOptions="StartAndExpand"
                                Margin="10, 10, 10, 0">
                        <StackLayout
                            VerticalOptions="StartAndExpand">
                            <customRenderers:MaterialFrame Elevation="20" CornerRadius="30"
                                                           Margin="10, 0, 10, 15"
                                                           x:Name="FrameTop"
                                                           BackgroundColor="White"
                                                           Padding="0">

                                <StackLayout
                                    Margin="10, 20, 10, 10">

                                    <StackLayout
                                        Orientation="Horizontal">

                                        <Label Text="{x:Static xamarinJkh:AppResources.Info}"
                                               Margin="10, 0, 0, 0"
                                               FontAttributes="Bold"
                                               FontSize="20"
                                               TextColor="Black"
                                               HorizontalOptions="Center" />
                                    </StackLayout>

                                    <StackLayout
                                        Orientation="Vertical"
                                        Margin="5, 10, 5, 10">

                                        <StackLayout
                                            Orientation="Horizontal">
                                            <local:IconView x:Name="IconViewFio"
                                                            Source="ic_fio_reg"
                                                            HeightRequest="25"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="Center" />
                                            <Label x:Name="LabelPhone2"
                                                   Text="{x:Static xamarinJkh:AppResources.FIO}"
                                                   MinimumWidthRequest="50"
                                                   MaxLines="1"
                                                   FontSize="16"
                                                   TextColor="Black"
                                                   Margin="-5, 0, 0, 0"
                                                   VerticalOptions="Center" />

                                            <Entry x:Name="EntryFio"
                                                   FontSize="15"
                                                   VerticalOptions="End"
                                                   HorizontalTextAlignment="Center"
                                                   TextColor="#A2A2A2"
                                                   HorizontalOptions="FillAndExpand"
                                                   Placeholder="Иванов Иван Иванович"
                                                   Keyboard="Text" />
                                        </StackLayout>

                                        <StackLayout
                                            Orientation="Horizontal">
                                            <!-- <Image Source="ic_separator" -->
                                            <!--        VerticalOptions="Start" -->
                                            <!--        HorizontalOptions="FillAndExpand" /> -->
                                            <Label
                                                HeightRequest="2"
                                                BackgroundColor="#DEDEDE"
                                                WidthRequest="110" />
                                            <Label
                                                x:Name="LabelseparatorFio"
                                                HeightRequest="2"
                                                Margin="-10, 0, 0, 0"
                                                BackgroundColor="Red"
                                                HorizontalOptions="FillAndExpand" />

                                        </StackLayout>
                                        <StackLayout
                                            Margin="0, 20, 0, 0"
                                            Orientation="Horizontal">
                                            <local:IconView x:Name="IconViewEmail"
                                                            Source="ic_profile_email"
                                                            HeightRequest="25"

                                                            VerticalOptions="Center" />

                                            <Label Text="E-mail"
                                                   MinimumWidthRequest="50"
                                                   MaxLines="1"
                                                   FontSize="16"
                                                   TextColor="Black"
                                                   Margin="-5, 0, 0, 5"
                                                   VerticalOptions="Center" />

                                            <Entry x:Name="EntryEmail"
                                                   FontSize="15"
                                                   TextColor="#A2A2A2"
                                                   BackgroundColor="Transparent"
                                                   HorizontalTextAlignment="Center"
                                                   HorizontalOptions="FillAndExpand"
                                                   Placeholder="example@test.com"
                                                   Keyboard="Email" />

                                        </StackLayout>
                                        <StackLayout
                                            Orientation="Horizontal">
                                            <!-- <Image Source="ic_separator" -->
                                            <!--        VerticalOptions="Start" -->
                                            <!--        HorizontalOptions="FillAndExpand" /> -->
                                            <Label
                                                HeightRequest="2"
                                                BackgroundColor="#DEDEDE"
                                                WidthRequest="110" />
                                            <Label
                                                x:Name="LabelseparatorEmail"
                                                HeightRequest="2"
                                                Margin="-10, 0, 0, 0"
                                                BackgroundColor="Red"
                                                HorizontalOptions="FillAndExpand" />

                                        </StackLayout>

                                    </StackLayout>
                                    <ActivityIndicator x:Name="progress"
                                                       IsRunning="true"
                                                       IsVisible="False"
                                                       Color="Red" />
                                    <Frame CornerRadius="15"
                                           BackgroundColor="Red"
                                           Margin="0, 10, 0, 10"
                                           x:Name="FrameBtnLogin"
                                           Padding="0">
                                        <StackLayout
                                            x:Name="SaveStackLayout"
                                            Orientation="Horizontal"
                                            Margin="-40, 0, 0, 0"
                                            HorizontalOptions="Center"
                                            VerticalOptions="FillAndExpand">
                                            <local:IconView x:Name="IconViewSave"
                                                            Margin="0, 10, 0, 10"
                                                            Source="ic_check_mark"
                                                            HeightRequest="25"
                                                            WidthRequest="35"
                                                            VerticalOptions="Center" />
                                            <Label x:Name="BtnSave"
                                                   Text="{x:Static xamarinJkh:AppResources.Save}"
                                                   Margin="0, 0, 0, 0"
                                                   FontSize="15"
                                                   TextColor="White"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="FillAndExpand"
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </customRenderers:MaterialFrame>
                            
                            <customRenderers:MaterialFrame Elevation="20"
                                                           CornerRadius="30"
                                                           x:Name="FrameSettings"
                                                           Margin="10, 15, 10, 15"
                                                           BackgroundColor="White"
                                                           Padding="0">

                                <StackLayout
                                    Margin="10, 20, 10, 10">
                                    <StackLayout
                                        Orientation="Horizontal">

                                        <Label x:Name="themelabel" Text="{x:Static xamarinJkh:AppResources.Theme}"
                                               Margin="10, 0, 0, 0"
                                               FontAttributes="Bold"
                                               FontSize="20"
                                               TextColor="Black"
                                               HorizontalOptions="Center" />
                                    </StackLayout>
                                    <StackLayout x:Name="ThemeButtonBlock"
                                        Margin="5,0,0,0">
                                        <RadioButton
                                            x:Name="RadioButtonAuto"
                                            FontSize="16"
                                            CheckedChanged="RadioButtonAuto_OnCheckedChanged"
                                            Text="{x:Static xamarinJkh:AppResources.Automatic}" />
                                        <RadioButton
                                            x:Name="RadioButtonDark"
                                            CheckedChanged="RadioButtonDark_OnCheckedChanged"
                                            FontSize="16"
                                            Text="{x:Static xamarinJkh:AppResources.Dark}" />
                                        <RadioButton
                                            x:Name="RadioButtonLigth"
                                            CheckedChanged="RadioButtonLigth_OnCheckedChanged"
                                            FontSize="16"
                                            Text="{x:Static xamarinJkh:AppResources.Light}" />
                                    </StackLayout>
                                </StackLayout>
                            </customRenderers:MaterialFrame>
                            
                            <Frame CornerRadius="15"
                                   BackgroundColor="Red"
                                   Margin="10, 10, 10, 10"
                                   x:Name="FrameBtnExit"
                                   Padding="0">
                                <StackLayout
                                    x:Name="ExitStackLayout"
                                    Orientation="Horizontal"
                                    Margin="-40, 0, 0, 0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="FillAndExpand">
                                    <local:IconView x:Name="IconViewExit"
                                                    Margin="0, 10, 0, 10"
                                                    Source="ic_exit"
                                                    HeightRequest="25"
                                                    WidthRequest="35"
                                                    VerticalOptions="Center" />
                                    <Label x:Name="BtnExit"
                                           Text="{x:Static xamarinJkh:AppResources.Exit}"
                                           Margin="0, 0, 0, 0"
                                           FontSize="15"
                                           TextColor="White"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalOptions="Center" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </Grid>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>