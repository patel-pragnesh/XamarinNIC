<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#F3F3F3}"
             x:Class="xamarinJKH.Additional.AdditionalOnePage"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal"
                         Margin="10, 10, 10, 0"
                         HorizontalOptions="FillAndExpand">
                <StackLayout
                    x:Name="BackStackLayout"
                    Orientation="Horizontal"
                    HorizontalOptions="StartAndExpand">
                    <svg:SvgCachedImage Source="resource://xamarinJKH.Resources.ic_arrow_back.svg"
                                         HeightRequest="15"
                                         WidthRequest="15"
                                         ReplaceStringMap="{Binding adress, Converter={x:StaticResource SvgColor}, ConverterParameter='#000000|#FFFFFF'}"
                                         HorizontalOptions="Center" />
                    <Label
                        Text="{x:Static xamarinJkh:AppResources.Back}"
                        FontSize="15"
                        TextColor="Black"
                        HorizontalOptions="Start" />
                </StackLayout>
                <StackLayout
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <svg:SvgCachedImage x:Name="IconViewTech"
                                        Source="resource://xamarinJKH.Resources.ic_tech.svg"
                                        HeightRequest="25"
                                        ReplaceStringMap="{Binding adress, Converter={x:StaticResource SvgColor}, ConverterParameter='#000000'}"
                                        Margin="-10, -10,10,-10"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />
                    <Label x:Name="LabelTech"
                           Text="{x:Static xamarinJkh:AppResources.Support}"
                           FontSize="14"
                           TextDecorations="Underline"
                           TextColor="Black"
                           Margin="-10, 0, 0, 0"
                           VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>
            <ScrollView Orientation="Vertical"
                        Margin="0, 0, 0, 0">
                <StackLayout
                    Margin="0,0,0,20"
                    Spacing="0"
                    VerticalOptions="StartAndExpand">
                    <StackLayout
                        Margin="10">
                        <Label x:Name="LabelTitle"
                               FontAttributes="Bold"
                               FontSize="20"
                               HorizontalOptions="StartAndExpand"
                               TextColor="Black"
                               Text="Заголовок" />
                        <Label x:Name="LabelAdress"
                               HorizontalOptions="Start"
                               TextColor="Black"
                               FontSize="15"
                               Text="23.05.2020" >
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClickCommand}"
                                                      CommandParameter="{Binding adress}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label x:Name="LabelDesc"
                               HorizontalOptions="Start"
                               Margin="0, 10, 0, 0"
                               FontSize="15"
                               TextColor="Black"
                               Text="Большой текст" />
                    </StackLayout>
                    <Image x:Name="ImageAdd"
                           HeightRequest="200"
                           Aspect="Fill"
                           Source="ic_background_event"
                    />
                    <ActivityIndicator x:Name="progress"
                                       IsRunning="true"
                                       HeightRequest="40"
                                       WidthRequest="40"
                                       Margin="0,0,0,15"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       IsVisible="False"
                                       Color="{Binding hex}" />
                    <Frame CornerRadius="15"
                           BackgroundColor="Red"
                           Margin="40, 10, 40, 30"
                           IsVisible="False"
                           x:Name="FrameBtnQuest"
                           Padding="0">
                        <Button x:Name="BtnQuest"
                                Text="{x:Static xamarinJkh:AppResources.Order}"
                                TextColor="White"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                Clicked="ButtonClick" />
                    </Frame>
            
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>