<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xamarinJkh="clr-namespace:xamarinJKH;assembly=xamarinJKH"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#F3F3F3}"
             x:Class="xamarinJKH.Questions.PollsPage">

    <ContentPage.Content>
        <StackLayout>
            <pancakeView:PancakeView
                Padding="0"
                CornerRadius="0,0,25,25"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#131313}"
                HorizontalOptions="Fill"
                MinimumHeightRequest="102"
                BorderThickness="1"
                VerticalOptions="Start"
                x:Name="Pancake"
                IsClippedToBounds="True">
                <Grid IsClippedToBounds="True">
                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="Fill"
                                 HorizontalOptions="FillAndExpand">
                        <StackLayout Padding="10"
                                     HorizontalOptions="FillAndExpand">
                            <Label x:Name="UkName"
                                   Text="Название"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            <StackLayout
                                Spacing="0"
                                Orientation="Horizontal">
                                <xamarinJkh:IconView x:Name="IconViewLogin"
                                                     Source="ic_phone"
                                                     HeightRequest="15"
                                                     Foreground="White"
                                                     Margin="-10, 0,0,0"
                                                     HorizontalOptions="Start"
                                                     VerticalOptions="Center" />
                                <Label x:Name="LabelPhone"
                                       Text="Телефон"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       Margin="-5, 0, 0, 0"
                                       VerticalOptions="Center" />
                            </StackLayout>
                        </StackLayout>
                        <pancakeView:PancakeView
                            BorderColor="Gray"
                            x:Name="PancakeViewIcon"
                            BorderThickness="1"
                            Padding="0"
                            CornerRadius="25,0,25,25"
                            BackgroundColor="White"
                            HorizontalOptions="End"
                            IsClippedToBounds="True">
                            <Image x:Name="IconViewNameUk"
                                   Source="icon_login"
                                   HeightRequest="70" />
                        </pancakeView:PancakeView>
                    </StackLayout>
                </Grid>
            </pancakeView:PancakeView>
            <StackLayout
                HorizontalOptions="End"
                Margin="0,0,15,0"
                Orientation="Horizontal">
                <xamarinJkh:IconView x:Name="IconViewTech"
                                     Source="ic_tech"
                                     HeightRequest="20"
                                     Foreground="Black"
                                     Margin="0, 0,0,0"
                                     HorizontalOptions="Start"
                                     VerticalOptions="Center" />
                <Label x:Name="LabelTech"
                       Text="{x:Static xamarinJkh:AppResources.Support}"
                       FontSize="14"
                       TextDecorations="Underline"
                       TextColor="Black"
                       Margin="-10, 0, 0, 0"
                       VerticalOptions="Center" />
            </StackLayout>
            <StackLayout
                x:Name="BackStackLayout"
                Orientation="Horizontal"
                Margin="25, 0, 0, 0"
                HorizontalOptions="Start">
                <xamarinJkh:IconView Source="ic_arrow_back"
                                     HeightRequest="15"
                                     WidthRequest="15"
                                     Foreground="Black"
                                     HorizontalOptions="Center" />
                <Label
                    Text="{x:Static xamarinJkh:AppResources.Back}"
                    FontSize="15"
                    TextColor="Black"
                    HorizontalOptions="Start" />
            </StackLayout>

            <StackLayout
                Spacing="0"
                Margin="40,10,20,0">
                <Label x:Name="LabelTitle"
                       FontAttributes="Bold"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       TextColor="Black"
                       Text="Заголовок" />
                <Label x:Name="LabelDate"
                       HorizontalOptions="Start"
                       TextColor="Black"
                       FontSize="15"
                       Text="23.05.2020" />
            </StackLayout>
            <StackLayout x:Name="StackLayoutIndicator"
                         Orientation="Horizontal"
                         HeightRequest="2"
                         Margin="0,10,0,10"
                         BackgroundColor="White"
                         HorizontalOptions="FillAndExpand"
                         Spacing="0" />
            <ScrollView Orientation="Vertical"
                        VerticalOptions="FillAndExpand"
                        Padding="0,0,0,10"
                        Margin="20, 0, 0, 0">
                <StackLayout
                    VerticalOptions="StartAndExpand">
                    <StackLayout x:Name="Container"
                                 VerticalOptions="FillAndExpand"
                                 Margin="20,0,20,20" />

                </StackLayout>
            </ScrollView>
            <StackLayout Orientation="Horizontal"
                         Margin="40, 0, 40, 50">
                <Frame CornerRadius="10"
                       BackgroundColor="Red"
                       Margin="0, 10, 0, 0"
                       x:Name="FrameBack"
                       HorizontalOptions="StartAndExpand"
                       Padding="40,12,40,12">
                    <!-- <Button x:Name="BtnBackQ" -->
                    <!--         Text="{x:Static xamarinJkh:AppResources.Back}" -->
                    <!--         TextColor="White" -->
                    <!--         FontAttributes="Bold" -->
                    <!--         BackgroundColor="Transparent" -->
                    <!--         Clicked="ButtonClickBack" /> -->
                    <StackLayout
                        Orientation="Horizontal"
                        Spacing="0"
                        HorizontalOptions="Center">
                        <xamarinJkh:IconView Source="ic_arrow_forward"
                                             HeightRequest="10"
                                             WidthRequest="10"
                                             Margin="0,0,0,-3"
                                             RotationX="180"
                                             Rotation="180"
                                             Foreground="{AppThemeBinding Light=Black, Dark=White}"
                                             VerticalOptions="Center"
                                             HorizontalOptions="Center" />
                        <Label
                            x:Name="LabelPrev"
                            Text=" Назад  "
                            FontSize="14"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            FontAttributes="Bold"
                            VerticalOptions="Center"
                            HorizontalOptions="Center" />

                    </StackLayout>
                </Frame>
                <Frame CornerRadius="10"
                       BackgroundColor="Red"
                       HorizontalOptions="EndAndExpand"
                       Margin="0, 10, 0, 0"
                       IsVisible="False"
                       x:Name="FrameBtnNext"
                       Padding="40,12,40,12">
                    <!-- <Button x:Name="BtnNextQ" -->
                    <!--         Text="Вперед" -->
                    <!--         TextColor="White" -->
                    <!--         FontAttributes="Bold" -->
                    <!--         BackgroundColor="Transparent" -->
                    <!--         Clicked="ButtonClickNext" /> -->
                    <StackLayout
                        Orientation="Horizontal"
                        Spacing="0"
                        HorizontalOptions="Center">
                        <Label
                            x:Name="LabelNext"
                            Text="Далее "
                            FontSize="14"
                            TextColor="White"
                            FontAttributes="Bold"
                            VerticalOptions="Center"
                            HorizontalOptions="Center" />
                        <xamarinJkh:IconView Source="ic_arrow_forward"
                                             HeightRequest="10"
                                             WidthRequest="10"
                                             Margin="0,0,0,-3"
                                             Foreground="White"
                                             VerticalOptions="Center"
                                             HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
                <Frame CornerRadius="10"
                       BackgroundColor="Red"
                       Margin="0, 10, 0, 0"
                       IsVisible="False"
                       HorizontalOptions="EndAndExpand"
                       x:Name="FrameBtnFinish"
                       Padding="30,12,30,12">
                    <!-- <Button x:Name="BtnFinishQ" -->
                    <!--         Text="Завершить" -->
                    <!--         TextColor="White" -->
                    <!--         FontAttributes="Bold" -->
                    <!--         BackgroundColor="Transparent" -->
                    <!--         Clicked="ButtonClickFinish" /> -->
                    <StackLayout
                        Orientation="Horizontal"
                        Spacing="0"
                        HorizontalOptions="Center">
                        <xamarinJkh:IconView Source="ic_check_mark"
                                             HeightRequest="17"
                                             WidthRequest="17"
                                             Margin="0,0,0,-3"
                                             Foreground="White"
                                             VerticalOptions="Center"
                                             HorizontalOptions="Center" />
                        <Label
                            x:Name="LabelFinish"
                            Text=" Завершить"
                            FontSize="14"
                            TextColor="White"
                            FontAttributes="Bold"
                            VerticalOptions="Center"
                            HorizontalOptions="Center" />

                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>