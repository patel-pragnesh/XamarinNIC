                                       IsVisible="False"
                                       HorizontalOptions="CenterAndExpand"
                                       HorizontalTextAlignment="Center"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       FontSize="12" />
                                    <Label x:Name="addIdentLbl"
                                       Text="{x:Static xamarinJkh:AppResources.NoAccounts}"
