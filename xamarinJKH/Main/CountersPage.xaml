                                Units = "{Binding Units}"
                                Values="{Binding Values}" />
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>-->

                    </StackLayout>
                </StackLayout>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>