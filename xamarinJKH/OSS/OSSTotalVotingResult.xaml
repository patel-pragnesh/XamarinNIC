          FontSize="12" VerticalOptions="Center" HorizontalOptions="Center" Text="0" TextColor="White"
         Grid.Row="0"
         Grid.Column="0"/>
                                            </Grid>
                                            <Label Text="{x:Static xamarinJkh:AppResources.OSSPersonalNeutral}" FontSize="16" TextColor="Black" VerticalOptions="Center" />
