                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <xamarinJkh:IconView x:Name="cntYes" HorizontalOptions="Center"
         Source="ic_OssCircleStatus.png" HeightRequest="25" WidthRequest="25"
         Grid.Row="0"
         Grid.Column="0"/>
